---
import type { CollectionEntry } from 'astro:content';

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
---

<a href={`/work/${project.slug}`} class="group grid md:grid-cols-2 gap-8 items-center cursor-pointer">
    <div class="order-2 md:order-1">
        <h3 class="text-2xl font-bold mb-2 text-zinc-900 dark:text-white group-hover:text-brand-600 dark:group-hover:text-brand-400 transition-colors">
            {project.data.title}
        </h3>
        <p class="text-zinc-500 dark:text-zinc-400 mb-4 leading-relaxed">
            {project.data.description}
        </p>
        <div class="flex flex-wrap gap-2">
            {/* Tambahkan ( ... || []) untuk mencegah error jika techStack kosong */}
            {(project.data.techStack || []).map((tech) => (
                <span class="px-2 py-1 bg-zinc-100 dark:bg-zinc-800 rounded text-xs font-bold text-zinc-600 dark:text-zinc-300 border border-zinc-200 dark:border-zinc-700">
                    {tech}
                </span>
            ))}
        </div>
    </div>
    <div class="order-1 md:order-2 rounded-2xl overflow-hidden border border-zinc-200 dark:border-zinc-800 shadow-sm relative aspect-[16/10]">
        <img 
            src={project.data.heroImage} 
            alt={project.data.title} 
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            loading="lazy"
        />
        <!-- Overlay Effect -->
        <div class="absolute inset-0 bg-brand-600/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 mix-blend-overlay"></div>
    </div>
</a>