---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
// Pastikan kamu sudah punya komponen TableOfContents dari step sebelumnya
import TableOfContents from '../../components/blog/TableOfContents.astro'; 

export async function getStaticPaths() {
    const posts = await getCollection('blog');
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();

// Logic Artikel Terkait: Ambil 2 post lain secara acak (shuffle)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
    .filter((p) => p.slug !== post.slug)
    .sort(() => 0.5 - Math.random()) 
    .slice(0, 2);
---

<BaseLayout title={post.data.title} description={post.data.description} image={post.data.heroImage}>
    
    <!-- Back Button -->
    <div class="max-w-3xl mx-auto mb-8">
        <a href="/blog" class="inline-flex items-center gap-2 text-sm font-bold text-zinc-500 hover:text-brand-600 transition-colors">
            <i class="ph ph-arrow-left"></i> Kembali ke Blog
        </a>
    </div>

    <article class="max-w-3xl mx-auto pb-20">
        
        <!-- Header Artikel -->
        <div class="text-center mb-10">
            <div class="flex items-center justify-center gap-3 text-sm font-medium text-brand-600 dark:text-brand-400 mb-4 tracking-wide uppercase">
                <span class="bg-brand-100 dark:bg-brand-900/30 px-3 py-1 rounded-full">{post.data.category}</span>
                <span class="text-zinc-400">â€¢</span>
                <span>{post.data.pubDate.toLocaleDateString('id-ID', { dateStyle: 'long' })}</span>
            </div>
            <h1 class="text-4xl md:text-6xl font-display font-bold mb-6 leading-tight text-zinc-900 dark:text-white">
                {post.data.title}
            </h1>
        </div>

        <!-- Hero Image -->
        <div class="w-full aspect-[21/9] rounded-3xl overflow-hidden bg-zinc-100 dark:bg-zinc-800 mb-12 border border-zinc-200 dark:border-zinc-800">
            <img 
                src={post.data.heroImage || 'https://placehold.co/1200x600'} 
                alt={post.data.title} 
                class="w-full h-full object-cover"
            />
        </div>

        <!-- Table of Contents (Muncul jika ada heading) -->
        {headings.length > 0 && <TableOfContents headings={headings} />}

        <!-- Isi Konten Markdown -->
        <div class="prose prose-lg dark:prose-invert prose-zinc mx-auto">
            <Content />
        </div>

        <!-- Share Buttons -->
        <div class="mt-16 pt-8 border-t border-zinc-200 dark:border-zinc-800 flex flex-col sm:flex-row justify-between items-center gap-4">
            <span class="font-display font-bold text-lg text-zinc-900 dark:text-white">Bagikan artikel ini</span>
            <div class="flex gap-2">
                <a href={`https://twitter.com/intent/tweet?text=${post.data.title}&url=${Astro.url}`} target="_blank" class="w-10 h-10 rounded-full bg-zinc-100 dark:bg-zinc-800 flex items-center justify-center hover:bg-brand-600 hover:text-white transition-colors text-zinc-600 dark:text-zinc-400">
                    <i class="ph ph-twitter-logo text-xl"></i>
                </a>
                <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${Astro.url}`} target="_blank" class="w-10 h-10 rounded-full bg-zinc-100 dark:bg-zinc-800 flex items-center justify-center hover:bg-brand-600 hover:text-white transition-colors text-zinc-600 dark:text-zinc-400">
                    <i class="ph ph-linkedin-logo text-xl"></i>
                </a>
            </div>
        </div>

        <!-- Artikel Terkait -->
        <div class="mt-20">
            <h3 class="font-display font-bold text-3xl mb-8 text-zinc-900 dark:text-white">Baca Selanjutnya</h3>
            <div class="grid md:grid-cols-2 gap-6">
                {relatedPosts.map((related) => (
                    <a href={`/blog/${related.slug}`} class="group flex gap-4 items-center bg-zinc-50 dark:bg-zinc-900/50 p-4 rounded-2xl border border-zinc-200 dark:border-zinc-800 hover:border-brand-500 transition-all hover:shadow-lg hover:shadow-brand-500/10">
                        <div class="w-24 h-24 rounded-xl overflow-hidden bg-zinc-200 flex-shrink-0">
                            <img src={related.data.heroImage || 'https://placehold.co/150'} alt={related.data.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                        </div>
                        <div>
                            <h4 class="font-bold text-lg mb-1 text-zinc-900 dark:text-zinc-100 group-hover:text-brand-600 transition-colors line-clamp-2">
                                {related.data.title}
                            </h4>
                            <span class="text-xs text-zinc-500 font-medium">
                                Baca sekarang &rarr;
                            </span>
                        </div>
                    </a>
                ))}
            </div>
        </div>

    </article>
</BaseLayout>