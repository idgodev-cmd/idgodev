---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogCard from '../../components/blog/BlogCard.astro';

// Ambil semua artikel blog
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="Engineering Notes" description="Writing about web development, architecture, and performance.">
    <div class="mb-12 border-b border-zinc-200 dark:border-zinc-800 pb-8 animate-fade">
        <h1 class="text-4xl md:text-6xl font-bold mb-4 text-zinc-900 dark:text-white">Engineering Notes</h1>
        <p class="text-zinc-500 text-lg">Catatan teknis, opini, dan tutorial seputar modern web.</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 animate-fade">
        {posts.map((post) => (
            <BlogCard post={post} />
        ))}
    </div>
</BaseLayout>