---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TimeCalculator from '../../components/tools/TimeCalculator.jsx';
---

<BaseLayout title="Kalkulator Waktu Pengerjaan" description="Estimasi durasi proyek website.">
    <div class="pt-20 md:pt-32 px-6 mb-32">
        <div class="text-center mb-16 max-w-3xl mx-auto">
            <span className="text-amber-600 font-bold tracking-wider text-sm uppercase mb-2 block">Planning Tools</span>
            <h1 class="font-display text-4xl md:text-6xl font-bold mb-6 text-zinc-900 dark:text-white">
                Time <span class="text-amber-500">Calculator.</span>
            </h1>
            <p class="text-lg text-zinc-500 dark:text-zinc-400">
                Hitung perkiraan durasi pengerjaan proyek berdasarkan kompleksitasnya.
            </p>
        </div>
        <div class="max-w-4xl mx-auto">
            <TimeCalculator client:load />
        </div>
    </div>
</BaseLayout>