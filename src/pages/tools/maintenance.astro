---
import BaseLayout from '../../layouts/BaseLayout.astro';
import MaintenanceEstimator from '../../components/tools/MaintenanceEstimator.jsx';
---

<BaseLayout title="Maintenance Cost Estimator" description="Hitung biaya perawatan website bulanan.">
    <div class="pt-20 md:pt-32 px-6 mb-32">
        <div class="text-center mb-16 max-w-3xl mx-auto">
            <span className="text-green-600 font-bold tracking-wider text-sm uppercase mb-2 block">Client Tools</span>
            <h1 class="font-display text-4xl md:text-6xl font-bold mb-6 text-zinc-900 dark:text-white">
                Maintenance <span class="text-green-600">Estimator.</span>
            </h1>
            <p class="text-lg text-zinc-500 dark:text-zinc-400">
                Pastikan website Anda tetap aman dan cepat dengan paket perawatan yang transparan.
            </p>
        </div>
        <div class="max-w-5xl mx-auto">
            <MaintenanceEstimator client:load />
        </div>
    </div>
</BaseLayout>